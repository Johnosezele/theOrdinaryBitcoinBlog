        "leftCharacter": {
          "image": "bob_excited.png",
          "emotion": "excited",
          "dialogueActive": true,
          "dialogue": "Hi there, I'm Bob.",
          "size": "large"
        },
        "rightCharacter": {
          "image": "carol_excited.png",
          "emotion": "excited",
          "dialogueActive": true,
          "dialogue": "Hey Bob, I'm Carol. \nI'm excited to learn about Bitcoin with you!",
